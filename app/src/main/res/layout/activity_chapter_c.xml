<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start_anim"
            />
        <Button
            android:layout_toRightOf="@+id/btn"
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start_anim"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffff00"
        android:text="hello qqqq"
        android:layout_marginLeft="150dp"
        />
    <com.template.customview.LoadingImageView
        android:layout_marginTop="50dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pic_1"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载中..."
        >
    </TextView>
    <ImageView
        android:id="@+id/ball_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/circle"
        >
    </ImageView>
    <com.template.customview.FallingBallImageView
        android:id="@+id/ball_img2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/circle"
        >
    </com.template.customview.FallingBallImageView>
    <com.template.customview.CustomTextView
        android:id="@+id/custom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gogogo"
        android:background="#ffff00"
        android:layout_marginLeft="150dp"
        >
    </com.template.customview.CustomTextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="animator_set"
            />
        <TextView
            android:layout_toRightOf="@id/btn2"
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textview-1"
            android:background="#00ff00"
            android:padding="4dp"
            android:layout_marginLeft="10dp"
            >
        </TextView>
        <TextView
            android:layout_toRightOf="@id/tv_1"
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textview-2"
            android:background="#00ff00"
            android:padding="4dp"
            android:layout_marginLeft="10dp"
            >
        </TextView>
        <Button
            android:layout_toRightOf="@id/tv_2"
            android:id="@+id/btn2_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="animator_c"
            />
        <FrameLayout
            android:layout_below="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">
            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="animator_set"
                />
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="textview-1"
                android:background="#00ff00"
                android:padding="4dp"
                android:layout_marginLeft="200dp"
                >
            </TextView>
            <Button
                android:id="@+id/menu"
                style="@style/MenuStyle"
                android:background="@drawable/menu"/>

            <Button
                android:id="@+id/item1"
                style="@style/MenuItemStyle"
                android:background="@drawable/circle1"
                android:visibility="gone"/>

            <Button
                android:id="@+id/item2"
                style="@style/MenuItemStyle"
                android:background="@drawable/circle2"
                android:visibility="gone"/>

            <Button
                android:id="@+id/item3"
                style="@style/MenuItemStyle"
                android:background="@drawable/circle3"
                android:visibility="gone"/>

            <Button
                android:id="@+id/item4"
                style="@style/MenuItemStyle"
                android:background="@drawable/circle4"
                android:visibility="gone"/>

            <Button
                android:id="@+id/item5"
                style="@style/MenuItemStyle"
                android:background="@drawable/circle5"
                android:visibility="gone"/>

        </FrameLayout>
    </RelativeLayout>

</LinearLayout>