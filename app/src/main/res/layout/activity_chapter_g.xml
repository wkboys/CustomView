<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <com.template.customview.NormalGestureTrackView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

        />
    <com.template.customview.NormalGestureTrackTwoView
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <com.template.customview.AnimWaveView
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <com.template.customview.ShadowLayerView
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/add_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add_black"
            >
        </Button>
        <Button
            android:id="@+id/delete_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete_black"
            >
        </Button>
        <TextView
            android:text="哈哈哈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowRadius="3"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="@color/colorPrimary"
            ></TextView>
        <TextView
            android:id="@+id/tv_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈"
            ></TextView>
    </LinearLayout>
    <com.template.customview.BitmapShadowView
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <com.template.customview.BitmapShaderView
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp" />

</LinearLayout>